columns = 3
gutterSize = 2px

html, body
	width 100%
	height 100%
	padding 0
	margin 0
	background #efefef
	#main
		padding-bottom gutterSize
		&:after
			content ''
			clear both
			display block
		.square
			background #ffffff
			width "calc((100vw - %s) / %s - %s )" % (gutterSize columns gutterSize)
			height "calc((100vw - %s) / %s - %s )" % (gutterSize columns gutterSize)
			float left
			position relative
			margin-left gutterSize
			margin-top gutterSize
			svg
				z-index 1
				position relative
			canvas
				z-index 0
				position absolute
				top 0
				left 0
				width 100% !important
				height 100% !important